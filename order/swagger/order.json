{
  "openapi": "3.0.1",
  "info": {
    "description": "Treinamento da PagoNxt (Empresa Santander) com a Alura - Microserviço de Ecommerce, documentação dos pedidos",
    "version": "0.2.0",
    "title": "Ecomm Project - Orders API",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "Marina",
      "email": "marina.mendes@pagonxt.com"
    },
    "license": {
      "name": "Licença",
      "url": "http://www.alura.com"
    }
  },
  "security": [
    {
      "JWTAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  ],
  "components": {
    "schemas": {
      "order-insert": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "delivery_address": {
            "type": "object",
            "properties": {
              "cep": {
                "type": "string"
              },
              "street": {
                "type": "string"
              },
              "number": {
                "type": "string"
              },
              "complement": {
                "type": "string"
              }
            }
          },
          "order": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "product_id": {
                  "type": "string"
                },
                "product_qty": {
                  "type": "integer"
                },
                "discount": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "order-response": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "user_info": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "cfp": {
                "type": "string"
              }
            }
          },
          "delivery_address": {
            "type": "object",
            "properties": {
              "cep": {
                "type": "integer"
              },
              "street": {
                "type": "string"
              },
              "number": {
                "type": "integer"
              },
              "complement": {
                "type": "string"
              }
            }
          },
          "order": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "product_name": {
                  "type": "string"
                },
                "product_price": {
                  "type": "integer"
                },
                "product_qty": {
                  "type": "integer"
                },
                "discount": {
                  "type": "integer"
                }
              }
            }
          },
          "total_price": {
            "type": "integer"
          },
          "sale_date": {
            "type": "string",
            "format": "date"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": null,
      "description": "Order Server - XD"
    }
  ],
  "paths": {
    "/sale": {
      "get": {
        "tags": [
          "Sale"
        ],
        "summary": "Search for all available Sales.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/order-response"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unathorized",
            "content": {
              "aplication/json": {
                "example": "Token not found || Expired or invalid token"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Sale"
        ],
        "summary": "Add a new order to the list. You need to be logged as an adminstrator to use this.",
        "requestBody": {
          "required": true,
          "content": {
            "aplication/json": {
              "schema": {
                "$ref": "#/components/schemas/order-insert"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "aplication/json": {
                "schema": {
                  "$ref": "#/components/schemas/order-response"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "aplication/json": {
                "example": "Token not found || Expired or invalid token"
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "example": "\\xxx\\ is required || \\xxx\\ must be 'typeof'"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/sale/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "description": "Unique identifier",
          "required": true,
          "example": "63caa785ae701b25441ff0be",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": [
          "Sale"
        ],
        "summary": "Search for an especific order by ID.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "aplication/json": {
                "schema": {
                  "$ref": "#/components/schemas/order-response"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "aplication/json": {
                "example": "Token not found || Expired or invalid token"
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "aplication/json": {
                "example": "Not Found"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "patch": {
        "tags": [
          "Sale"
        ],
        "summary": "Change a order information by ID. You need to be logged as an adminstrator to use this.",
        "requestBody": {
          "required": true,
          "content": {
            "aplication/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "aplication/json": {
                "example": "Token not found || Expired or invalid token"
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "aplication/json": {
                "example": "Order Not Found"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Sale"
        ],
        "summary": "Delete a order by ID. You need to be logged as an adminstrator to use this.",
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "aplication/json": {
                "example": "Token not found || Expired or invalid token"
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "aplication/json": {
                "example": "Order Not Found"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}